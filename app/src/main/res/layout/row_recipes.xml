<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    app:cardCornerRadius="0dp"
    app:cardMaxElevation="1dp"
    app:cardElevation="1dp"

    app:contentPaddingBottom="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    layout_height="">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/banana"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imgViewRecipe"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            />
        <RelativeLayout
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#77000000"
            >
            <TextView
                android:id="@+id/txtViewRecipeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:text="Tortilla de patatas"
                android:textSize="15dp"
                android:textColor="#FFF"/>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtViewRecipeName">
                <ImageView
                    android:id="@+id/imgViewNumberPCook"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/people_cook"/>
                <TextView
                    android:id="@+id/txtVIewNumberOfpeople"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="#FFF"
                    android:layout_marginLeft="5dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/time_cook"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:id="@+id/txtViewTimeToCook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="45 '"
                    android:textColor="#FFF"
                    />
            </LinearLayout>

<!--            <ImageView
                android:id="@+id/imgViewRecipeFavourite"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/favorite_ok"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtViewRecipeName"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"/>-->

        </RelativeLayout>

    </android.support.v7.widget.CardView>


